extends ../layouts/_layout_default

block setting
    - title = "Công ty cổ phần sữa VitaDairy Việt Nam"
    - mainActive = "nuoi-duong"

block content
    .sMainChild.sNew.sNewDetail
        .sMainContent.sMainContent-other
            .container
                +breadcrumb([{'title':'Nuôi dưỡng bé yêu','link':'#'},{'title':'Miễn dịch khoẻ'}])
                .sLinkWrap
                    .sLink.sLink-col-6
                        ul
                            li.active: a(href="#")
                                span.icon-link
                                    <svg viewBox="0 0 40 40" class="icon-shape">
                                        <use xlink:href="#nuoiduong1"></use>
                                    </svg>
                                span.icon-text Miễn dịch <br>khoẻ
                            li: a(href="#")
                                span.icon-link
                                    <svg viewBox="0 0 40 40" class="icon-shape">
                                        <use xlink:href="#nuoiduong2"></use>
                                    </svg>
                                span.icon-text Tiêu hoá<br> tốt
                            li: a(href="#")
                                span.icon-link
                                    <svg viewBox="0 0 40 40" class="icon-shape">
                                        <use xlink:href="#nuoiduong3"></use>
                                    </svg>
                                span.icon-text Phát triển<br> thể chất
                            li: a(href="#")
                                span.icon-link
                                    <svg viewBox="0 0 40 40" class="icon-shape">
                                        <use xlink:href="#nuoiduong4"></use>
                                    </svg>
                                span.icon-text Phát triển<br> trí não
                            li: a(href="#itemNews5")
                                span.icon-link
                                    <svg viewBox="0 0 40 40" class="icon-shape">
                                        <use xlink:href="#nuoiduong5"></use>
                                    </svg>
                                span.icon-text Dị ứng<br> đạm sữa bò
                            li: a(href="#itemNews6")
                                span.icon-link
                                    <svg viewBox="0 0 40 40" class="icon-shape">
                                        <use xlink:href="#nuoiduong6"></use>
                                    </svg>
                                span.icon-text Nuôi dạy con và<br> nhật ký làm mẹ
        .sMainContentInfo.bg-miendich
            .container
                .page-header
                    h3
                        span.icon-text
                            <svg viewBox="0 0 51.171 50" class="icon-shape">
                                <use xlink:href="#ic-thongtinnoibat"></use>
                            </svg>
                        span.ttl-text Thông tin nổi bật
                .sInfo.listColNew
                    .bigImageEvent
                        +itemBigEvent(imgPath + 'miendichkhoe/img-01.jpg','image',"#","Nuôi dưỡng hệ miễn dịch của trẻ: Mẹ đã biết chưa?")
