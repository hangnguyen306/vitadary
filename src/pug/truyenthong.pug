extends layouts/_layout_default

block setting
    - title = "Công ty cổ phần sữa VitaDairy Việt Nam"
    - mainActive = "bi-quyet"

block content
    .sMainChild.sNew.sNewDetail
      .sMainContent.bg-truyenthong-1
          .container
            +breadcrumb([{'title':'Truyền thông'}])
            .page-header
              h3
                span.icon-text
                    <svg viewBox="0 0 63.891 50" class="icon-shape">
                        <use xlink:href="#ic-tintuc-sukien"></use>
                    </svg>
                span.ttl-text Tin tức Sự kiện
            .sInfo.listColNew
              .bigImageEvent
                  +itemBigEvent(imgPath + 'tintucsukien/img-01.jpg','image',"#","Chính phủ Mỹ nói gì về hợp tác độc quyền sữa non của…")
