block setting
    - title = "Công ty cổ phần sữa VitaDairy Việt Nam"
    - mainActive = "bi-quyet"

block content
    .sMainChild.sNew.sNewDetail
        .sMainContent.bg-thongtinkhuyemai
            .container
                +breadcrumb([{'title':'Truyền thông','link':'#'},{'title':'Thông tin khuyến mãi'}])
            .sMainContentInfo
                .container
                    .sInfo.listColNew
                        .bigImageEvent.bigImageEventSlider
