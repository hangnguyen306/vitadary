extends ../layouts/_layout_default

block setting
    - title = "Công ty cổ phần sữa VitaDairy Việt Nam"
    - mainActive = "bi-quyet"

block content
    .sMainChild.sNew.sNewDetail
        .sMainContent.sMainContent-other
            .container
                +breadcrumb([{'title':'Bí quyết mẹ khoẻ','link':url + 'biquyetmekhoe.html'},{'title':'Dự định mang thai'}])
                .sLinkWrap
                    .sLink.sLink-col-4
                        ul
                            li.active: a(href="#")
                                span.icon-link
                                    <svg viewBox="0 0 40 40" class="icon-shape">
                                        <use xlink:href="#mom1"></use>
                                    </svg>
                                span.icon-text Dự định <br>mang thai
                            li: a(href="#")
                                span.icon-link
                                    <svg viewBox="0 0 29 50" class="icon-shape">
                                        <use xlink:href="#mom2"></use>
                                    </svg>
                                span.icon-text Mang thai
                            li: a(href="#")
                                span.icon-link
                                    <svg viewBox="0 0 40 40" class="icon-shape">
                                        <use xlink:href="#mom3"></use>
                                    </svg>
                                span.icon-text Dự sinh
                            li: a(href="#")
                                span.icon-link
                                    <svg viewBox="0 0 40 40" class="icon-shape">
                                        <use xlink:href="#mom4"></use>
                                    </svg>
                                span.icon-text Sau sinh và <br>chăm sóc bé yêu
        .sMainContentInfo.bg-dudinh
            .container
                .page-header
                    h3
                        span.icon-text
                            <svg viewBox="0 0 51.171 50" class="icon-shape">
                                <use xlink:href="#ic-thongtinnoibat"></use>
                            </svg>
                        span.ttl-text Thông tin nổi bật
                .sInfo.listColNew
                    .bigImageEvent
                        +itemBigEvent(imgPath + 'dudinhmangthai/img-01.jpg','image',"#","Cần chuẩn bị những gì trước khi mang thai?")
                    -
                        var news = [
                            {'title' : "Vợ chồng cần chuẩn bị gì trước khi mang thai", 'img': 'dudinhmangthai/img-02.jpg','url' : "#"},
                            {'title' : "18 điều bạn nên chuẩn bị trước khi mang thai", 'img': 'dudinhmangthai/img-03.jpg','url' : "#"},
                            {'title' : "Nên và không nên ăn gì trước khi mang thai ", 'img': 'dudinhmangthai/img-04.jpg','url' : "#"},
                            {'title' : "Vợ chồng cần chuẩn bị gì trước khi mang thai", 'img': 'dudinhmangthai/img-02.jpg','url' : "#"},
                            {'title' : "18 điều bạn nên chuẩn bị trước khi mang thai", 'img': 'dudinhmangthai/img-03.jpg','url' : "#"},
                            {'title' : "Nên và không nên ăn gì trước khi mang thai ", 'img': 'dudinhmangthai/img-04.jpg','url' : "#"}
                        ]
                    .sNewsSlider
                        .sNewsSliderInner
                            for x in news
                                .item
                                    a(href='chitiet.html')
                                        img(data-lazy= imgPath + x.img alt="" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAADUlEQVR42mNk+P+/HgAFhAJ/wlseKgAAAABJRU5ErkJggg==")
                                    .info
                                        .date 21/09/2019
                                        a(href='chitiet.html')
                                            = x.title
                                        p Lorem ipsum dolor sit amet, consec tetur adip isicing elit, sed do eiusmod tempor 
                                        +a-btn-link('Xem thêm','chitiet.html')
        .sMainContentInfo.bg-thongtin
            .container
                .page-header
                    h3
                        span.icon-text
                            <svg viewBox="0 0 63.891 50" class="icon-shape">
                                <use xlink:href="#ic-thongtinlienquan"></use>
                            </svg>
                        span.ttl-text Thông tin liên quan
                -
                    var news2 = [
                        {'title' : "Trước khi mang thai phụ nữ cần bổ sung vitamin gì để…", 'img': 'dudinhmangthai/img-05.jpg','url' : "#"},
                        {'title' : "17 loại thực phẩm cần bổ sung trước khi mang thai", 'img': 'dudinhmangthai/img-06.jpg','url' : "#"},
                        {'title' : "Những cuốn sách người chuẩn bị mang thai nên tìm…", 'img': 'dudinhmangthai/img-07.jpg','url' : "#"},
                        {'title' : "Những cuốn sách người chuẩn bị mang thai nên tìm…", 'img': 'dudinhmangthai/img-08.jpg','url' : "#"},
                        {'title' : "Tất tần tật về những loại thuốc cần uống bổ sung…", 'img': 'dudinhmangthai/img-09.jpg','url' : "#"},
                        {'title' : "Gần sát ngày sinh, bà bầu cần nhớ điều này kẻo mang họa", 'img': 'dudinhmangthai/img-10.jpg','url' : "#"}
                    ]
                .sNewsSlider.row.sNewsSliderList
                        for x in news2
                            .col-md-4.col-sm-6
                                .item
                                    a(href='chitiet.html')
                                        img(data-src= imgPath + x.img alt="" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAADUlEQVR42mNk+P+/HgAFhAJ/wlseKgAAAABJRU5ErkJggg==").lazy
                                    .info
                                        .date 21/09/2019
                                        a(href='chitiet.html')
                                            = x.title
                                        p Lorem ipsum dolor sit amet, consec tetur adip isicing elit, sed do eiusmod tempor 
                                        +a-btn-link('Xem thêm','#')
                .sPaiging
                    +pagination([
                        {text:'<i class="arrow_carrot-left"></i>',url:'chitiet.html'},
                        {text:'1',url:'#'},
                        {text:'2',url:'#'},
                        {text:'3',url:'#'},
                        {text:'...',url:'#'},
                        {text:'<span>Cuối</span><i class="arrow_carrot-right"></i>',url:'#'}
                    ])