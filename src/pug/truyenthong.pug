                  var news = [
                      {'title' : "Báo Vnexpress: VitaDairy mang sữa non ColosIgG 24h…", 'img': 'tintucsukien/img-02.jpg','url' : "#"},
                      {'title' : "Báo Eva: Sao Việt chia sẻ bí quyết chăm con khỏe mạnh…", 'img': 'tintucsukien/img-03.jpg','url' : "#"},
                      {'title' : "Báo dân Trí: Cần có giải pháp giảm bệnh tiêu hóa, hô hấp…", 'img': 'tintucsukien/img-04.jpg','url' : "#"},
                      {'title' : "Eva.vn: Muốn con khỏe mạnh, cha mẹ hãy bổ sung ngay…", 'img': 'tintucsukien/img-05.jpg','url' : "#"},
                      {'title' : "Báo Dân Trí: Trẻ thường xuyên bị nhiễm khuẩn đường tiêu…", 'img': 'tintucsukien/img-06.jpg','url' : "#"},
                      {'title' : "Báo Thanh Niên: Bí quyết nuôi con mà ít phải đến bệnh…", 'img': 'tintucsukien/img-07.jpg','url' : "#"}
                  ]
              .sNewsSlider
                  .sNewsSliderInner
                      for x in news
                          .item
                              a(href=x.url)
                                  img(data-lazy= imgPath + x.img alt="" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAADUlEQVR42mNk+P+/HgAFhAJ/wlseKgAAAABJRU5ErkJggg==")
