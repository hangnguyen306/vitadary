                        {'title' : "Bí kíp kinh điển tăng đề kháng cho trẻ chỉ Trung tâm…", 'img': 'miendichkhoe/img-08.jpg','url' : "#"},
                        {'title' : "Miễn dịch - Nuôi con không kháng sinh", 'img': 'miendichkhoe/img-09.jpg','url' : "#"},
                        {'title' : "Điều kỳ diệu cho hệ miễn dịch của trẻ", 'img': 'miendichkhoe/img-10.jpg','url' : "#"}
                    ]
                .sNewsSlider.row.sNewsSliderList
                        for x in news2
                            .col-md-4.col-sm-6
                                .item
                                    a(href='chitiet.html')
                                        img(data-src= imgPath + x.img alt="" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAADUlEQVR42mNk+P+/HgAFhAJ/wlseKgAAAABJRU5ErkJggg==").lazy
