block content
    .sMainChild.sNew.sNewDetail
        .sMainContent.bg-thongtinkhuyemai
            .container
                +breadcrumb([{'title':'Truyền thông','link':'#'},{'title':'Chiến dịch Quảng cáo'}])
            .sMainContentInfo
                .container
                    .sInfo.listColNew
